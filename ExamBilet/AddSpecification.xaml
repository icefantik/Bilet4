<Window x:Class="ExamBilet.AddSpecification"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ExamBilet"
        mc:Ignorable="d"
        Title="Добавление спецификации" Height="150" Width="400">
    <Grid>
        <Grid.ColumnDefinitions>
            <!-- Разбиение на ширину -->
            <ColumnDefinition Width="30*"/>
            <ColumnDefinition Width="150*"/>
            <ColumnDefinition Width="85*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <!-- Разбиение на длины -->
            <RowDefinition Height="25*"/>
            <RowDefinition Height="15*"/>
            <RowDefinition Height="33*"/>
        </Grid.RowDefinitions>
        <TextBox x:Name="name" Grid.Row="1" Grid.Column="1"/>
        <Button Grid.Row="1" Grid.Column="3" Click="ClickAdd">Добавить</Button>
    </Grid>
</Window>
